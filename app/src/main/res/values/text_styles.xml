<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PostListTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="PostListContentStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SectionTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AuthorNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AuthorEmailStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthorEmailDetailsStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/link_text_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthorUserNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>